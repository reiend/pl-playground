{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,

    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
}
